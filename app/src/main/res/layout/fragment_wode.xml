<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="30dp"
       android:text="我的"
       android:layout_marginLeft="20dp"
       android:gravity="center_vertical"
       />
    <RelativeLayout

        android:id="@+id/wode_rela"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:padding="10dp"
            android:scaleType="fitXY"
            android:id="@+id/fragment_wode_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            />
        <LinearLayout
            android:layout_toRightOf="@id/fragment_wode_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">


                <TextView
                    android:id="@+id/wode_nincheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/wode_phone"
                    android:layout_width="100dp"
                    android:layout_height="20dp"

                    />

            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="48dp"
            android:layout_height="match_parent" />

    </RelativeLayout>
    
    <LinearLayout
        style="@style/linear_tiaomu"
        >
        <TextView
            style="@style/zhuti_text"
            android:text="会员中心"
            />
        <View
            style="@style/xiantiao_zhongjian"/>
        <TextView
            android:gravity="center"
            android:text="未购买"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            style="@style/img_xiao" /> />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#868383"
        />

    <LinearLayout
        android:id="@+id/wode_zhangdan"
        style="@style/linear_tiaomu">

        <TextView
            style="@style/zhuti_text"
            android:text="账单"
             />

        <View
            style="@style/xiantiao_zhongjian"/>

        <ImageView
            style="@style/img_xiao" />
    </LinearLayout>

    <View
        style="@style/xiantiao" />

    <LinearLayout
        style="@style/linear_tiaomu">

        <TextView
            style="@style/zhuti_text"
            android:text="总资产"
             />

        <View
            style="@style/xiantiao_zhongjian" />


        <ImageView
            style="@style/img_xiao" /> />
    </LinearLayout>

    <View
        style="@style/xiantiao" />

    <LinearLayout
        style="@style/linear_tiaomu">

        <TextView
            style="@style/zhuti_text"
            android:text="余额"
             />

        <View
            style="@style/xiantiao_zhongjian"/>


        <ImageView
            style="@style/img_xiao" />/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />

    <LinearLayout
        style="@style/linear_tiaomu">

        <TextView
            style="@style/zhuti_text"
            android:text="银行卡" />

        <View
            style="@style/xiantiao_zhongjian" />


        <ImageView style="@style/img_xiao" />
        />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#817b7b"
        />

    <LinearLayout
        android:id="@+id/wode_bzzx"
        style="@style/linear_tiaomu">

        <TextView
            style="@style/zhuti_text"
            android:text="帮助中心"
             />

        <View
            style="@style/xiantiao_zhongjian" />


        <ImageView
            style="@style/img_xiao" />/>
    </LinearLayout>
    <View
        style="@style/xiantiao"/>

    <LinearLayout
        android:id="@+id/wode_shezhi"
        style="@style/linear_tiaomu">

        <TextView
            style="@style/zhuti_text"
            android:text="设置"
             />

        <View
            style="@style/xiantiao_zhongjian"/>


        <ImageView
            style="@style/img_xiao" />/>
    </LinearLayout>

    <View
        style="@style/xiantiao" />
    <LinearLayout
        style="@style/linear_tiaomu">

        <TextView
            android:text="版本更新"
            style="@style/zhuti_text" />

        <View
            style="@style/xiantiao_zhongjian"/>


        <ImageView
            style="@style/img_xiao" />/>
    </LinearLayout>

    <View
        style="@style/xiantiao"  />

</LinearLayout>